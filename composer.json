{
    "name": "romuloar/rom.result",
    "description": "A PHP library for encapsulating method results, inspired by the .NET package rom.result. Provides standardized Success, Error, Warning, and Info result objects with sync and async (Closure) APIs.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Romulo Ribeiro"            
        }
    ],
    "autoload": {
        "psr-4": {
            "Rom\\Result\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "test": "phpunit --testdox"
    },
    "keywords": [
        "result",
        "success",
        "error",
        "warning",
        "info",
        "response",
        "pattern",
        "dotnet",
        "async",
        "closure"
    ],
    "homepage": "https://github.com/romuloar/rom.result-php",
    "support": {
        "issues": "https://github.com/romuloar/rom.result-php/issues",
        "source": "https://github.com/romuloar/rom.result-php"
    }
}
